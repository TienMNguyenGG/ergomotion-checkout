{% schema %}
{
  "name":"IG Feed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Connect with us"
    },
    {
      "type": "select",
      "id": "heading_size_2",
      "options": [
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        }
      ],
      "default": "h3",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "text",
      "id": "label_link",
      "label": "Label Link"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link Url"
    },
    {
      "type": "checkbox",
      "id": "target",
      "label": "Open new tab"
    },
    {
      "type": "text",
      "id": "hiddenText",
      "label": "Hidden Text"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40,
      "label": "Bottom padding mobile"
    }
    ],
    "presets":[{
      "name":"IG Feed",
      "category":"Instagram Feed"
    }
  ]
}
{%endschema%}
