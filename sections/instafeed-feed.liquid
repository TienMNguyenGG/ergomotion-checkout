{{section.settings.html_area}}
{%- style -%}
.section-{{ section.id }}-padding {
padding-bottom: {{ section.settings.padding_bottom_mb }}px;
}

@media screen and (min-width: 768px) {
.section-{{ section.id }}-padding {
padding-bottom: {{ section.settings.padding_bottom }}px;
}
}
{%- endstyle -%}
<style>
  #insta-feed {
    margin-top: 0;
  }

  .instafeed-shopify a {
    position: absolute;
  }
</style>

{% unless section.settings.html_area contains "feed-" %}
<div class="section-{{ section.id }}-padding">
  <div class="module mod-instagram-feed overflow-hidden bg-gray-600 pt-40 pb-59 md:pt-32 md:pb-32 2xl:pt-55 2xl:pb-35">
    <div id="insta-feed" class="h-0 overflow-hidden"></div>
    <div class="container max-w-1040 2xl:max-w-1344 md:px-24 xl:flex 2xl:px-3">
      <div class="col-left mb-20 pl-20 md:pl-0 md:-mb-3 flex-none xl:w-118 xl:mr-4p5 2xl:w-138p5 2xl:mt-43 2xl:-mr-4 transition-transform" data-paroller-factor="0.05" data-paroller-type="foreground">
        <h3 class="{{ section.settings.heading_size_2 }} mb-2 md:-mb-1p5 xl:mb-5 title" data-cy="heading">
          {{ section.settings.heading }}</h3>
        {% if section.settings.link_url != blank %}
        <div id="insta-feed-link">
          <a href="{{ section.settings.link_url }}" {% if section.settings.target == true %} target="_blank" rel="noopener noreferrer" {% endif%} class="text-midnight-blue no-underline font-bold text-btn"
            data-cy="subhead">{{ section.settings.label_link }}{% if section.settings.hiddenText != blank %}<span class="sr-only">{{ section.settings.hiddenText}} </span> {% endif%}</a>
        </div>
        {% endif %}
      </div>

      <div class="wrap-instagram-image min-w-744 md:min-w-0 flex-1 xl:mt-14p5 2xl:mt-0 transition-transform" data-paroller-factor="0.075" data-paroller-type="foreground">
