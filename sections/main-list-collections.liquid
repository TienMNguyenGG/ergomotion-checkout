{%- style -%}
  .section-{{ section.id }}-padding {
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding module-collections-list animation">
  <div class="container px-12 md:px-24 xl:px-10 2xl:max-w-1370">
    <div class="row -mx-4 2xl:-mx-10 anima-bottom delay-2">
      {%- for block in section.blocks -%}
        <div class="col w-full px-4 mb-40 md:mb-35 md:w-1/2 xl:w-1/3 2xl:px-10">
          <a href="{{ block.settings.collection.url }}" class="block relative image-product mb-16 md:mb-12 xl:mb-12 2xl:mb-22 2xl:rounded-4 2xl:overflow-hidden" tabindex="-1">
            <div class="pb-feature-col-v2 relative overflow-hidden">
            {%- if block.settings.collection.featured_image != blank -%}
              <img src="{{ block.settings.collection.featured_image | image_url }}" alt="{{ block.settings.collection.featured_image.alt }}" class="object-cover object-center absolute left-0 top-0 w-full h-full 2xl:rounded-4">
            {% endif %}
            </div>
          </a>
          <h5 class="ml-12 mb-7 md:mb-2 md:ml-8 xl:ml-0 xl:text-h5-md xl:mb-1 2xl:text-h5-xl 2xl:mb-5">
            <a href="{{ block.settings.collection.url }}" class="text-hush-black no-underline hover:no-underline hover:text-blue-400">
              {{ block.settings.collection.title | escape }}
            </a>
          </h5>
          {{ block.settings.description }}
          <a href="{{ block.settings.collection.url }}" class="link-arrow btn ml-12 md:ml-8 xl:ml-0" tabindex="-1">
            {% if block.settings.label_link != blank %}
              {{ block.settings.label_link }}
            {% else %}
              Explore Collection
            {% endif %}
            <span class="icomoon icon-link-arrow"></span>
          </a>
        </div>
        
      {%- endfor -%}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Collection List",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40,
      "label": "t:sections.all.padding.padding_bottom"
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 40,
      "label": "Bottom padding mobile"
    }
  ],
   "blocks": [
    {
      "type": "collection",
      "name": "Collection Item",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "label_link",
          "label": "Label Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection List"
    }
  ]
}
{% endschema %}
